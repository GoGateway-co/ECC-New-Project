{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "roadmap.schema.json",
  "title": "ECC Handoff Roadmap",
  "description": "Schema for docs/roadmap.json - the source of truth for project roadmap state. Used for documentation and test validation, NOT runtime validation (roadmap-manager.js handles that).",
  "type": "object",
  "required": ["version", "name", "purpose", "created", "lastUpdated", "next", "phases", "progress", "blocked", "parked", "origin"],
  "additionalProperties": false,
  "properties": {
    "version": {
      "type": "string",
      "const": "1.0"
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "purpose": {
      "type": "string"
    },
    "created": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "lastUpdated": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "lastSession": {
      "type": ["string", "null"]
    },
    "next": {
      "type": ["string", "null"],
      "pattern": "^P\\d+\\.G\\d+\\.T\\d+(\\.\\d+)?$"
    },
    "phases": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/phase"
      }
    },
    "progress": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/progressEntry"
      },
      "maxItems": 100
    },
    "blocked": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/blocker"
      }
    },
    "parked": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/parkedIdea"
      }
    },
    "origin": {
      "$ref": "#/$defs/origin"
    }
  },
  "$defs": {
    "phase": {
      "type": "object",
      "required": ["id", "name", "status", "goals"],
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^P\\d+$"
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "status": {
          "type": "string",
          "enum": ["pending", "active", "done"]
        },
        "goals": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/goal"
          }
        }
      }
    },
    "goal": {
      "type": "object",
      "required": ["id", "name", "status", "tasks"],
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^P\\d+\\.G\\d+$"
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "status": {
          "type": "string",
          "enum": ["pending", "active", "done"]
        },
        "tasks": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/task"
          }
        }
      }
    },
    "task": {
      "type": "object",
      "required": ["id", "name", "status", "priority", "sessions", "lastSession", "notes", "subtasks"],
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^P\\d+\\.G\\d+\\.T\\d+$"
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "status": {
          "type": "string",
          "enum": ["pending", "in_progress", "done", "blocked"]
        },
        "priority": {
          "type": "string",
          "enum": ["high", "medium", "low"]
        },
        "sessions": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "lastSession": {
          "type": ["string", "null"]
        },
        "notes": {
          "type": "string"
        },
        "subtasks": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/subtask"
          }
        }
      }
    },
    "subtask": {
      "type": "object",
      "required": ["id", "name", "status"],
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^P\\d+\\.G\\d+\\.T\\d+\\.\\d+$"
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "status": {
          "type": "string",
          "enum": ["pending", "in_progress", "done"]
        }
      }
    },
    "progressEntry": {
      "type": "object",
      "required": ["session", "summary"],
      "additionalProperties": false,
      "properties": {
        "session": {
          "type": "string"
        },
        "summary": {
          "type": "string"
        }
      }
    },
    "blocker": {
      "type": "object",
      "required": ["taskId", "description", "addedAt"],
      "additionalProperties": false,
      "properties": {
        "taskId": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "addedAt": {
          "type": "string",
          "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
        }
      }
    },
    "parkedIdea": {
      "type": "object",
      "required": ["description", "reason", "revisitWhen", "addedAt"],
      "additionalProperties": false,
      "properties": {
        "description": {
          "type": "string"
        },
        "reason": {
          "type": "string"
        },
        "revisitWhen": {
          "type": "string"
        },
        "addedAt": {
          "type": "string",
          "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
        }
      }
    },
    "origin": {
      "type": "object",
      "required": ["purpose", "created", "method", "startingState"],
      "additionalProperties": false,
      "properties": {
        "purpose": {
          "type": "string"
        },
        "created": {
          "type": "string",
          "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
        },
        "method": {
          "type": "string"
        },
        "startingState": {
          "type": "string",
          "enum": ["just-starting", "in-progress", "near-completion"]
        }
      }
    }
  }
}
